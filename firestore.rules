rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can only access their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // ECG sessions subcollection - users can access their own sessions
      match /ecg_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Temporary: Allow authenticated users to write to any document for debugging
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}